spring.application.name=backend
management.endpoints.web.exposure.include=*
server.port=8080

#Configuration de la base de données PostgreSQL
spring.datasource.url=jdbc:postgresql://localhost:5432/meddatacollect
spring.datasource.username=postgres
spring.datasource.password=YOUR_DB_PASSWORD_HERE
spring.datasource.driver-class-name=org.postgresql.Driver

#Configuration de JPA/Hibernate
spring.jpa.open-in-view=false
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
logging.level.root=WARN

#JWT Configuration
jwt.secret.key=YOUR_JWT_SECRET_KEY_HERE_MINIMUM_256_BITS
jwt.expiration=86400000

#CORS Configuration
cors.allowed.origins=${CORS_ALLOWED_ORIGINS:http://localhost:3000}

# Encryption Configuration (AES-256-GCM)
# IMPORTANT: La clé DOIT faire exactement 32 caractères (256 bits)
# En production, utilisez une variable d'environnement: ${ENCRYPTION_KEY}
# Générer une clé sécurisée: openssl rand -base64 32 | cut -c1-32
app.encryption.key=${ENCRYPTION_KEY:YOUR_32_CHAR_ENCRYPTION_KEY_HERE}
